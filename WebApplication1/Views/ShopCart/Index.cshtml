@model ShopCartViewModel


<div class="container">
    @foreach(var el in Model.shopCart.listShopItems) {
        <div class="alert alert-warning mt-3">
            <p>@el.car.name</p>
            <p>Price: @el.car.price.ToString("c")</p>
        </div>
    }
    <hr />
    <div class="btn btn-danger" asp-controller="Order">оплатить</div>
</div>