@model WebApplication1.Data.Models.Car

<div class="col-md-3" style="margin-bottom: 20px;">
	<div class="card">
		<div class="card-body">
			<img src="@Model.img" alt="img" style="width: 100%; height: 200px; border-radius: 0.375rem">
			<h5 class="card-title">@Model.name</h5>
			<p class="card-text">@Model.shortDesc</p>
			<h6 class="card-subtitle mb-2 text-muted">@Model.price.ToString("c")</h6>
			<div class="button-group">
				<button class="info_btn">More Info</button>
				<button class="cart_btn">Add to Cart</button>
			</div>
		</div>
	</div>
</div>